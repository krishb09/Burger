
<div class="container">
  <div class="row">
    <div class="col-6">
      <h2><span class="badge badge-pill badge-info">Burger Menu</span></h2>
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              {{> burger devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="w-80"></div>
    <div class="col-6">
            <h2><span class="badge badge-pill badge-secondary">All da burgers eaten!</span></h2>
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  <div class= "done">{{this.burger_name}}</div>
                {{/if}}
              {{/each}}
            </ul>
    </div>

  </div>
</div>




<h2><span class="badge badge-pill badge-warning">Add a burger to the menu!</span></h2>

<form class="create-form">
  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>
  <button type="submit" class="btn btn-success">Add</button>
</form>
